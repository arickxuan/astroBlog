---
interface Props {
  headings: Array<{
    depth: number;
    slug: string;
    text: string;
  }>;
}

const { headings } = Astro.props;
---

<nav class="table-of-contents">
  <h3 class="text-lg font-semibold mb-4">目录</h3>
  <ul class="space-y-2">
    {headings.map((heading) => (
      <li class={`ml-${(heading.depth - 1) * 4}`}>
        <a
          href={`#${heading.slug}`}
          class="block py-1 hover:text-blue-600 text-gray-600"
        >
          {heading.text}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .table-of-contents {
    @apply text-sm;
  }
</style>